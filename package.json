{
  "name": "notes",
  "version": "1.0.0",
  "description": "Note taking app with syntax highlighting, Vim keybindings, and more.",
  "main": "./out/main/index.js",
  "author": "Breadworks",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev -w",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "yarn lint && yarn typecheck && electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "build-grammar": "sh ./build-grammar.sh"
  },
  "dependencies": {
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-lezer": "^6.0.1",
    "@codemirror/lang-markdown": "^6.3.2",
    "@codemirror/language-data": "^6.5.1",
    "@codemirror/search": "^6.5.11",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@hookform/resolvers": "^5.0.1",
    "@lezer/generator": "^1.7.3",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.4",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-switch": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@ray-d-song/guesslang-js": "^0.1.0",
    "@replit/codemirror-vim": "^6.3.0",
    "@tailwindcss/vite": "^4.1.7",
    "@vscode/vscode-languagedetection": "^1.0.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "debounce": "^2.2.0",
    "electron-log": "^5.4.0",
    "electron-store": "8.1.0",
    "electron-updater": "^6.3.9",
    "font-list": "^1.5.1",
    "guesslang-js": "^0.0.3",
    "immer": "^10.1.1",
    "js-levenshtein": "^1.1.6",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.510.0",
    "mathjs": "^14.4.0",
    "react-hook-form": "^7.56.3",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.6",
    "tinykeys": "^3.0.0",
    "tw-animate-css": "^1.2.9",
    "zlibjs": "^0.3.1",
    "zod": "^3.24.4",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@lezer/markdown": "^1.4.3",
    "@types/js-levenshtein": "^1.1.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.18",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3",
    "vite": "^6.2.6"
  }
}
